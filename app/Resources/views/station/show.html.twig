{% extends 'SensorsBundle:Admin:layout.html.twig' %}

{% block body %}
    <h1>Station</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ station.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ station.name }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ station.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ station.lng }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ station.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_station_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('crud_station_edit', { 'id': station.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
