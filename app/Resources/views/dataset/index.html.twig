{% extends 'base.html.twig' %}

{% block body %}
    <h1>Datasets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dataset in datasets %}
            <tr>
                <td><a href="{{ path('crud_dataset_show', { 'id': dataset.id }) }}">{{ dataset.id }}</a></td>
                <td>{{ dataset.name }}</td>
                <td>{{ dataset.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('crud_dataset_show', { 'id': dataset.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('crud_dataset_edit', { 'id': dataset.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_dataset_new') }}">Create a new dataset</a>
        </li>
    </ul>
{% endblock %}
