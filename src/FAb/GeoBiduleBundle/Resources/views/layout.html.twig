<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <title> layout 1111{% block title %} No title {% endblock %}</title>


        {% block css %}            
            {% if app.environment == 'prod' %}
                <link rel="stylesheet" 
                      href="http://code.jquery.com/ui/1.12.1/jquery-ui.min.js" />
                <link rel="stylesheet" 
                      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
                      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
                      crossorigin="anonymous">
                <link rel="stylesheet"
                      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"
                      integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp"
                      crossorigin="anonymous">
            {% else %}
                <link rel="stylesheet" href="{{ asset('dist/jquery-ui/jquery-ui.min.css') }}">
                <link rel="stylesheet" href="{{ asset('dist/Bootstrap/bootstrap.min.css') }}">
                <link rel="stylesheet" href="{{ asset('dist/Bootstrap/bootstrap-theme.min.css') }}">
            {% endif %}
        {% endblock %}
    </head>
    <body>
        <div data-role="page">
            <div data-role="header">
                {% block header %}               
                    <h1>My Title</h1>                
                {% endblock %}
            </div><!-- /header -->

            <div role="main" class="ui-content">
                {% block content %}                
                    <p>Hello world</p>
                {% endblock %}
            </div><!-- /content -->
            
            <div data-role="footer">
                {% block footer %}
                    <hr />
                    <p> Contact... </p>
                {% endblock %}
            </div><!-- /footer -->
        </div><!-- /page -->

        {% block javascripts %}
            <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            {% if app.environment == 'prod' %}
                <!--[if lt IE 9]>
                    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
                    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
                <![endif]-->

                <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js">
                </script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" 
                        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
                        crossorigin="anonymous">
                </script>            
            {% else %}
                <script src="{{ asset('dist/html5shiv.min.js') }} "></script>
                <script src="{{ asset('dist/respond.min.js') }} "></script>
                <script src="{{ asset('dist/jquery.min.js') }} "></script>
                <script src="{{ asset('dist/jquery-ui/jquery-ui.min.js') }} "></script>
                <script src="{{ asset('dist/Bootstrap/bootstrap.min.js') }} "></script>
            {% endif %}
        {% endblock %}
    </body>
</html>